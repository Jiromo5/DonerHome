            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.main.menu.MenuActivity"
            android:exported="true">
        </activity>

            <activity android:name=".activities.main.menu.AddDrinkActivity"
