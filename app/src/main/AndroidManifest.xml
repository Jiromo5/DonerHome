                android:exported="true">
            </activity>

            <activity android:name=".activities.main.profile.AddressesActivity"
                android:exported="true">
            </activity>

                <activity android:name=".activities.main.profile.UpdateAddressActivity"
                    android:exported="true">
                </activity>

            <activity android:name=".activities.main.profile.FeedBackActivity"
                android:exported="true">
            </activity>

            <activity android:name=".activities.main.profile.SettingsActivity"
                android:exported="true">
            </activity>

                <activity android:name=".activities.main.profile.LanguageActivity"
                    android:exported="true">
                </activity>

        <activity android:name=".activities.auth.LoginActivity"
            android:exported="true">
        </activity>

    </application>

</manifest>