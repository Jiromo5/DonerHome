<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Серый фон (края) -->
    <item>
        <shape>
            <solid android:color="#919191" /> <!-- Серый цвет -->
            <corners android:radius="0dp" /> <!-- Прямые углы -->
        </shape>
    </item>

    <!-- Белый внутренний фон -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Белый цвет -->
            <corners android:radius="0dp" /> <!-- Прямые углы -->
        </shape>
    </item>
</layer-list>
